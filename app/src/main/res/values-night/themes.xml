<resources>
    <style name="Theme.Tempo.DayNight" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="alertDialogTheme">@style/Theme.Tempo.AlertDialog</item>
    </style>

    <!-- Colors for material alert dialogs -->
    <style name="Theme.Tempo.AlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>
</resources>
